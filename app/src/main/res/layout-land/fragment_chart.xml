<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/StyleFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="horizontal"
    tools:mContext="edu.purdue.vieck.budgetapp.Fragments.ChartFragment">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/currency_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="$"
                android:textSize="16sp"
                android:textColor="@color/md_black_1000"/>

            <EditText android:id="@+id/edittext_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/currency_textview"
                android:layout_alignBaseline="@id/currency_textview"
                android:inputType="numberDecimal"
                android:hint="@string/budget"
                android:textSize="16sp"
                android:textColor="@color/md_black_1000"/>
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/budget_button_cancel"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/md_white_1000"
            android:layout_gravity="bottom|start|left"
            app:backgroundTint="@color/md_red_400"
            android:visibility="invisible"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/budget_button_ok"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_confirm"
            android:tint="@color/md_white_1000"
            android:layout_gravity="bottom|end|right"
            app:backgroundTint="@color/md_green_400"
            android:visibility="invisible"/>
    </FrameLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/frame_layout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/budget_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
