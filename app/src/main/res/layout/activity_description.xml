<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    style="@style/MyAppBarLayout"
    tools:context="edu.purdue.vieck.budgetapp.Activities.DescriptionActivity">

    <TextView android:id="@+id/textview_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/textview_label"/>

    <TextView android:id="@+id/label_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_amount"
        android:layout_alignParentStart="true"
        style="@style/textview_label"
        android:text="@string/category"/>

    <TextView android:id="@+id/textview_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/label_category"
        android:layout_below="@id/label_category"
        style="@style/textview_label"/>

    <TextView android:id="@+id/label_subcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_amount"
        android:layout_alignParentEnd="true"
        style="@style/textview_label"
        android:text="@string/subcategory"/>

    <TextView android:id="@+id/textview_subcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/label_subcategory"
        android:layout_below="@id/label_category"
        style="@style/textview_label"/>

    <TextView android:id="@+id/label_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_category"
        android:layout_centerHorizontal="true"
        style="@style/textview_label"
        android:text="@string/type"/>

    <TextView android:id="@+id/textview_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_type"
        android:layout_centerHorizontal="true"
        style="@style/textview_label"/>

    <TextView android:id="@+id/label_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_type"
        style="@style/textview_label"
        android:text="@string/note"/>

    <TextView android:id="@+id/textview_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_note"
        style="@style/textview_label"/>

    <TextView android:id="@+id/label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_note"
        android:layout_centerHorizontal="true"
        style="@style/textview_label"
        android:text="@string/date"/>

    <TextView android:id="@+id/textview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_date"
        android:layout_centerHorizontal="true"
        style="@style/textview_label"/>

    <ImageView android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
