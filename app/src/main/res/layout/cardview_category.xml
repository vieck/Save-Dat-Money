<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    cardview:cardBackgroundColor="?android:attr/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="1dp" />

        <TextView
            android:id="@+id/label_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageview"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/imageview"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/label_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/label_category"
            android:layout_below="@id/label_category"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:text="@string/budget" />

        <TextView
            android:id="@+id/edittext_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/label_amount"
            android:layout_toEndOf="@id/label_amount" />

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/percentage_bar"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@id/label_amount"
            app:rcBackgroundColor="@color/Black"
            app:rcBackgroundPadding="2dp"
            app:rcProgressColor="?android:attr/colorAccent"
            app:rcRadius="10dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>