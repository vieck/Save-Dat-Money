<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    cardview:cardBackgroundColor="@color/material_blue_grey_800"
    cardview:theme="@style/StyleCategoryItem">

    <RelativeLayout
        android:id="@+id/cardview_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cardview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="1dp"
            android:text="8-12-15"
            android:textSize="6pt" />

        <LinearLayout
            android:id="@+id/budget_form_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_date"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/cardview_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/cardview_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="5pt" />

            <TextView android:id="@+id/cardview_subcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="5pt"/>

            <TextView
                android:id="@+id/cardview_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="5pt" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>