<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/data_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorPrimary"
    android:padding="10dp">

    <TextView
        android:id="@+id/label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="8-12-15"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/label_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_date"
        android:layout_marginEnd="12dp"
        android:text="@string/expenses"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/label_subcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_date"
        android:layout_toEndOf="@id/label_category"
        android:layout_marginEnd="12dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/label_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_date"
        android:layout_toEndOf="@id/label_subcategory"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/data_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="24sp" />

    <!--TextView
        android:id="@+id/label_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_category"
        android:text="@string/budget"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/data_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_amount"
        android:layout_toEndOf="@id/label_budget"
        android:textSize="16sp"/-->
</RelativeLayout>