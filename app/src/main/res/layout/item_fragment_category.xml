<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/cardview"
    android:layout_margin="5dp"
    cardview:cardBackgroundColor="@color/PaleBlue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView android:id="@+id/imageview_category_item"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="1dp" />

        <TextView android:id="@+id/label_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/imageview_category_item"
            android:layout_alignTop="@id/imageview_category_item"
            android:textSize="8pt"/>

        <TextView android:id="@+id/label_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/label_category"
            android:layout_below="@id/label_category"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:text="@string/amount"/>

        <TextView android:id="@+id/textview_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/label_amount"
            android:layout_alignBaseline="@id/label_amount"
            android:textColor="@color/LimeGreen"/>

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar android:id="@+id/percentage_bar"
            android:layout_below="@id/label_amount"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            app:rcBackgroundColor="@color/Black"
            app:rcBackgroundPadding="2dp"
            app:rcProgressColor="@color/White"
            app:rcRadius="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>