<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/CottonBlue</item>
        <item name="android:colorPrimaryDark">@color/PaleGray</item>
        <item name="android:textColorPrimary">@color/CottonBlue</item>
        <item name="android:textColorSecondary">@color/PaleGray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MyAppBarLayout" parent="AppTheme">
        <item name="android:background">@color/DarkNavy</item>
    </style>

    <style name="StyleActivityAdd" parent="AppTheme">
        <item name="android:background">@color/DarkNavy</item>
        <item name="android:textColorPrimary">@color/CottonBlue</item>
        <item name="android:textColor">@color/CottonBlue</item>
    </style>

    <style name="StyleFragment">
        <item name="android:background">@color/DarkNavy</item>
        <item name="android:textColor">@color/CottonBlue</item>
        <item name="android:textColorHint">@color/NeonBlue</item>
    </style>

    <style name="StyleCategoryItem">
        <item name="android:textColor">@color/CottonBlue</item>
        <item name="android:textColorHint">@color/NeonBlue</item>
    </style>

    <style name="textview_label">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:color">@color/CottonBlue</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <!-- Graph Style -->
    <style name="cardview_categories">
        <item name="android:background">@color/PaleBlue</item>
        <item name="android:textColor">@color/CottonBlue</item>
    </style>

    <!-- Left Right Date Styles -->
    <style name="date_textview">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Category Styles -->
    <style name="edittext_add_fragment">
        <item name="android:editable">false</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textColorHint">@color/NeonBlue</item>
    </style>

    <style name="edittext_amount_add_fragment">
        <item name="android:editable">false</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textColorHint">@color/SheetBlue</item>
        <item name="android:shadowColor">@color/CottonBlue</item>
        <item name="android:shadowRadius">3</item>
    </style>
    
    <style name="edittext_note_add_fragment">
        <item name="android:textColor">@color/White</item>
        <item name="android:textColorHint">@color/SheetBlue</item>
    </style>

    <style name="button_add_fragment">
        <item name="android:textOff">@string/expense</item>
        <item name="android:textOn">@string/income</item>
        <item name="android:buttonTint">@color/PaleBlue</item>
        <item name="android:textColor">@color/CottonBlue</item>
    </style>

    <style name="textview_add_item">
        <item name="android:textColor">@color/CottonBlue</item>
        <item name="android:textSize">10pt</item>
    </style>

    <style name="textview_add_amount">
        <item name="android:textColor">@color/Red</item>
        <item name="android:textSize">14pt</item>
    </style>

    <!-- DASHBOARD STYLES -->
    <style name="dashboard_item_label">
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- Settings Styles -->
    <style name="settings_textview_label">
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
