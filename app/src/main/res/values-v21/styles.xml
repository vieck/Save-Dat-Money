<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/LimeGreen</item>
        <item name="android:colorPrimaryDark">@color/MediumSeaGreen</item>
        <item name="android:textColorPrimary">@color/BlueViolet</item>
        <item name="android:textColorSecondary">@color/Fuchsia</item>
    </style>

    <style name="MyAppBarLayout" parent="AppTheme">
        <item name="android:background">@color/ForestGreen</item>
    </style>

    <style name="textview_label">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">8pt</item>
    </style>
    
    <style name="spinner_style">
        <item name="android:textColor">@color/Black</item>
    </style>

    <!-- DASHBOARD STYLES -->
    <style name="dashboard_item_label">
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
