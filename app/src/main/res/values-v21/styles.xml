<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/md_white_1000</item>
        <item name="android:textColorPrimaryInverse">@color/md_black_1000</item>
        <item name="android:colorPrimaryDark">@color/md_indigo_300</item>
        <item name="android:colorBackground">@color/md_deep_purple_50</item>
        <item name="android:colorAccent">@color/md_deep_purple_200</item>
        <item name="android:textColorPrimary">@color/md_black_1000</item>
        <item name="android:textColorHint">@color/md_deep_purple_100</item>
        <item name="android:textColorSecondary">@color/md_blue_grey_50</item>
        <item name="colorControlNormal">@color/md_deep_purple_400</item>
        <item name="colorControlActivated">@color/md_deep_purple_50</item>
        <item name="colorControlHighlight">@color/md_deep_purple_50</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/background_dark</item>
    </style>

    <style name="MyAppBarLayout" parent="AppTheme">
        <item name="android:background">?android:attr/colorPrimary</item>
    </style>

    <style name="NavigationMenu" parent="AppTheme">
        <item name="android:background">?android:attr/colorPrimary</item>
    </style>

    <style name="StyleActivityAdd" parent="AppTheme">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="StyleFragment" parent="AppTheme">
        <item name="android:background">?android:attr/colorPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>

    <style name="StyleCategoryItem">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>

    <style name="StyleGraphFragment">
        <item name="android:background">?android:attr/textColorHint</item>
    </style>

    <style name="textview_label">
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">?android:attr/colorPrimary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="edittext_label">
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">none</item>
    </style>

    <!-- Chart Style -->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:background">?android:colorPrimary</item>
    </style>

    <!-- Add Style -->
    <style name="transparent_button">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Graph Style -->
    <style name="cardview_categories">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- Left Right Date Styles -->
    <style name="date_container">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="date_textview">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Add Fragment Styles -->

    <style name="edittext_add_fragment">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="edittext_add_category" parent="edittext_add_fragment">
        <item name="android:editable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="edittext_amount_add_fragment" parent="edittext_add_fragment">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
    </style>

    <style name="edittext_note_add_fragment" parent="edittext_add_fragment">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:maxLines">100</item>
    </style>

    <style name="button_add_fragment">
        <item name="android:textOff">@string/expense</item>
        <item name="android:textOn">@string/income</item>
        <item name="android:buttonTint">?android:attr/textColorHint</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="textview_add_item" parent="edittext_add_fragment">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="textview_add_amount">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="textview_add_note" parent="edittext_add_fragment">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- DASHBOARD STYLES -->
    <style name="dashboard_item_label">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Settings Styles -->
    <style name="settings_textview_label">
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
